<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.add.AddAlarmActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round15"
        android:elevation="3dp"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="13dp"
        android:paddingBottom="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2월 17일 월요일"
            android:textColor="@color/black_light"
            android:textSize="33sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/shape_calendar_body_blue">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:text="@string/add_mon"
                    android:textSize="10sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/date_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="17"
                    android:textColor="@color/white"
                    android:textSize="24sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="6dp"
                android:background="@drawable/shape_calendar_body_blue">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:text="@string/add_mon"
                    android:textSize="10sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/date_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="17"
                    android:textColor="@color/white"
                    android:textSize="24sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="6dp"
                android:background="@drawable/shape_calendar_body_blue">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:text="@string/add_mon"
                    android:textSize="10sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/date_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="17"
                    android:textColor="@color/white"
                    android:textSize="24sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="6dp"
                android:background="@drawable/shape_calendar_body_blue">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:text="@string/add_mon"
                    android:textSize="10sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/date_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="17"
                    android:textColor="@color/white"
                    android:textSize="24sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="6dp"
                android:background="@drawable/shape_calendar_body_blue">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:text="@string/add_mon"
                    android:textSize="10sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/date_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="17"
                    android:textColor="@color/white"
                    android:textSize="24sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="6dp"
                android:background="@drawable/shape_calendar_body_blue">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:text="@string/add_mon"
                    android:textSize="10sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/date_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="17"
                    android:textColor="@color/white"
                    android:textSize="24sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="6dp"
                android:background="@drawable/shape_calendar_body_blue">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:text="@string/add_mon"
                    android:textSize="10sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/date_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="17"
                    android:textColor="@color/white"
                    android:textSize="24sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:layout_marginHorizontal="18dp"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/zeroList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_non_added_ment"
        android:textColor="@color/black_light"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_add_schedule"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:stateListAnimator="@null"
        android:background="@drawable/shape_btn_add_schedule"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>