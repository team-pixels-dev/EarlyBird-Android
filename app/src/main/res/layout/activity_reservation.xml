<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.reservation.ReservationActivity">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="38dp"
        android:layout_height="34dp"
        android:background="#00000000"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_arrow_back"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:text="@string/reservation_title"
        android:textColor="@color/black_light"

        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_schedule_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title">

        <EditText
            android:id="@+id/todo_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/reservation_schedule_hint"
            android:textColor="@color/black"
            android:textColorHint="@color/black_light"
            android:textSize="20sp"
            android:fontFamily="@font/one_mobile_pop"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/pen"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />
        <ImageView
            android:id="@+id/pen"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="9dp"
            android:src="@drawable/item_pen"
            app:layout_constraintBottom_toBottomOf="@+id/todo_input"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wheel_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="175dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/wheel_picker_hour"
            android:layout_width="90dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:clipToPadding="false"
            android:overScrollMode="never"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/wheel_picker_minute"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/wheel_picker_minute"
            android:layout_width="90dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:clipToPadding="false"
            android:overScrollMode="never"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/wheel_picker_pa"
            android:layout_width="90dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:clipToPadding="false"
            android:overScrollMode="never"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/wheel_picker_minute"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:background="@drawable/round_white_8"
        android:paddingHorizontal="14dp"
        android:paddingVertical="18dp"
        android:layout_marginTop="36dp"
        android:layout_marginHorizontal="20.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wheel_picker">

        <TextView
            android:id="@+id/alarm_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reservation_alarm_sound"
            android:textColor="@color/black_light"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/alarm_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/reservation_normal"
            android:textColor="@color/black_light"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/alarm_title"
            app:layout_constraintTop_toBottomOf="@+id/alarm_title" />
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_alarmSound"
            android:layout_width="42dp"
            android:layout_height="27dp"
            android:checked="true"
            app:thumbTint="@color/white"
            app:trackTint="@color/sub_background"
            app:layout_constraintBottom_toBottomOf="@+id/alarm_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/alarm_title" />

        <View
            android:id="@+id/switch_divide_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/alarm_type"
            tools:layout_editor_absoluteX="14dp" />

        <TextView
            android:id="@+id/vibration_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reservation_vibration"
            android:textColor="@color/black_light"
            android:textSize="22sp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/switch_divide_line" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reservation_normal"
            android:textColor="@color/black_light"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@+id/vibration_title"
            app:layout_constraintTop_toBottomOf="@+id/vibration_title" />
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_vibration"
            android:layout_width="42dp"
            android:layout_height="27dp"
            android:checked="true"
            app:thumbTint="@color/white"
            app:trackTint="@color/sub_background"
            app:layout_constraintBottom_toBottomOf="@+id/vibration_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/vibration_title" />




    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:background="@drawable/button"
        android:text="저장"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginBottom="77dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>